<?xml version="1.0" encoding="UTF-8"?>
<config version="1.0">
  <system>
    <!-- System settings
	 *size
	 x: 出力サイズの幅
	 y: 出力サイズの高さ
	 *output
	 time: ページ送りの待ち時間(秒)
	 frame: 出力フレームレート
	 format: 出力する画像のフォーマット
    -->
    <size x="800" y="600" />
    <output time="6" frame="1" format="png" />
  </system>
  <fig>
    <!-- Figure settings
	 *bg
	 TBD
	 *fg
	 num: 立ち絵の最大数
	 *pos%d
	 xmid: 立ち絵の中心の横位置 - 左から0~100(%)
	 ymid: 立ち絵の中心の縦位置 - 上から0~100(%)
    -->
    <bg />
    <fg num="3">
      <pos xmid="25" ymid="50" />
      <pos xmid="50" ymid="50" />
      <pos xmid="75" ymid="50" />
    </fg>
  </fig>
  <text>
    <!-- Text settings
	 *character
	 font: name of font file
	 size: size of characeter (pt)
	 *msgbox
	 x: x coordinate of upper left of message box
	 y: y coordinate of upper left of message box
	 fig: name of image for message box
	 *style
	 raw: number of characters on a line
	 column: number of lines
    -->
    <character font="font.otf" size="28" />
    <msgbox x="45" y="385" fig="msgbox.png" />
    <style raw="24" column="4" />
  </text>
</config>
